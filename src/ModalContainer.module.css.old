.modal-wrapper {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items:center;
    background-color: rgb(255,255,255,0.3);
}

.modal-box {
    font-family: 'Merriweather', serif;
    background-color: white;
    border: 1px solid #FA8072;
    width: 45vw;
    height: 50vh;
    border-radius: 10px;
    padding: 40px;
    display: flex;
    flex-direction: column;
}
.modal-content {
    flex: 1 1 auto;
    display: block;
}
.modal-content > {}
.modal-actions {
    flex: 0 1 auto;
    display: flex;
    justify-content: center;
}
.modal-actions > * {
    flex-grow: 1;
    margin: 5px;
}