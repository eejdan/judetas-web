
.modal-input {
    width: 100%;
    padding: 10px;
    margin-top: 10px;
}
.title {
    font-size: 1.25em;
}
.search {
    display: grid;
    grid-template-columns: 20% auto;
    min-height: 50px;
    align-items: baseline;
}
.search-left {
    text-align: center;
    flex-grow: 2;
}
.search-right {
    flex-grow: 3;
}